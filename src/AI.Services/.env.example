# AI Services Environment Variables

# OpenAI API (for advanced NLP features)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/stocktrading_ai

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration (must match ASP.NET Core services)
JWT_SECRET_KEY=your-super-secret-key-that-is-at-least-32-characters-long-for-security
JWT_ISSUER=StockTradingAPI
JWT_AUDIENCE=StockTradingClient

# External Data Providers
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
FINNHUB_API_KEY=your_finnhub_api_key
POLYGON_API_KEY=your_polygon_api_key

# News APIs
NEWS_API_KEY=your_news_api_key

# Social Media APIs
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Logging
LOG_LEVEL=INFO

# Model Configuration
MODEL_CACHE_DIR=./models/cache
ENABLE_GPU=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
